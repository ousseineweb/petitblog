{% extends 'base/admin.html.twig' %}

{% block title 'Admin : Articles' %}

{% block admin %}
    <div class="content">
        <div class="app_title">
            <h1 class="title">#{{ post.id }} : {{ post.title }}</h1>
            <div class="btns">
                {{ include('admin/post/_delete_form.html.twig') }}
                <a class="btn btn-sm btn_return ml" href="{{ path('app_admin_post_index') }}">retour</a>
                <a class="btn btn-sm btn_edit ml" href="{{ path('app_admin_post_edit', {'id': post.id}) }}">edit</a>
            </div>
        </div>

        <div class="date">
            <div class="created-at">
                <span>Date de cr√©ation :</span>
                {{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}
            </div>
            <div class="updated-at">
                <span>Date de modification :</span>
                {{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}
            </div>
        </div>

        <div class="contain">
            <div class="summary">{{ post.summary }}</div>
            <article>{{ post.content | raw }}</article>
        </div>
    </div>
{% endblock %}
