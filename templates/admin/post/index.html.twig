{% extends 'base/admin.html.twig' %}

{% block title 'Admin : Articles' %}

{% block admin %}
    <div class="content">
        <div class="app_title">
            <h1 class="title">Post index</h1>
            <div class="btns">
                <a class="btn btn-sm btn_new" href="{{ path('app_admin_post_new') }}">Ajouter</a>
            </div>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Date de cr√©ation</th>
                <th>Date de modification</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>#{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="btn btn-sm btn_show" href="{{ path('app_admin_post_show', {'id': post.id}) }}">show</a>
                        <a class="btn btn-sm btn_edit" href="{{ path('app_admin_post_edit', {'id': post.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
