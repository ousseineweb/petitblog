{% extends 'base/admin.html.twig' %}

{% block title 'Admin : Commentaires' %}

{% block admin %}
    <div class="content">
        <div class="app_title">
            <h1 class="title">#{{ comment.id }} Comment</h1>
            <div class="btns">
                {{ include('admin/comment/_delete_form.html.twig') }}
                <a class="btn btn-sm btn_return ml" href="{{ path('app_admin_comment_index') }}">retour</a>
            </div>
        </div>

        <div class="date">
            <div class="published-at">
                <span>Date de publication :</span>
                {{ comment.publishedAt ? comment.publishedAt|date('Y-m-d H:i:s') : '' }}
            </div>
        </div>

        <article class="contain">
            <div class="user">
                <span>{{ comment.name }}</span>
                <span>{{ comment.email }}</span>
            </div>

            {{ comment.content | raw }}
        </article>
    </div>
{% endblock %}
