{% extends 'base/admin.html.twig' %}

{% block title 'Admin: A propos' %}

{% block admin %}
    <div class="content">
        <div class="app_title">
            <h1 class="title">#{{ about.id }} : {{ about.title }}</h1>
            <div class="btns">
                {{ include('admin/about/_delete_form.html.twig') }}
                <a class="btn btn-sm btn_edit ml" href="{{ path('app_admin_about_edit', {'id': about.id}) }}">edit</a>
                <a class="btn btn-sm btn_return ml" href="{{ path('app_admin_about_index') }}">retour</a>
            </div>
        </div>

        <div class="date">
            <div class="created-at">
                <span>Date de cr√©ation : </span>
                <span class="date-item">
                    {{ about.createdAt ? about.createdAt|date('Y-m-d H:i:s') : '' }}
                </span>
            </div>
            <div class="updated-at">
                <span>Date de modification : </span>
                <span class="date-item">
                    {{ about.updatedAt ? about.updatedAt|date('Y-m-d H:i:s') : '' }}
                </span>
            </div>
        </div>

        <article class="contain">
            {{ about.content | raw }}
        </article>
    </div>
{% endblock %}
