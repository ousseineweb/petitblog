{% extends 'base/admin.html.twig' %}

{% block title 'Admin : Category' %}

{% block admin %}
    <div class="content">
        <div class="app_title">
            <h1 class="title">#{{ category.id }} Category</h1>
            <div class="btns">
                {{ include('admin/category/_delete_form.html.twig') }}
                <a class="btn btn-sm btn_edit ml" href="{{ path('app_admin_category_edit', {'id': category.id}) }}">edit</a>
                <a class="btn btn-sm btn_return ml" href="{{ path('app_admin_category_index') }}">retour</a>
            </div>
        </div>

        <div class="date">
            <div class="created-at">
                <span>Date de publication :</span>
                {{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}
            </div>
        </div>

        <article class="contain">
            {{ category.name }}
        </article>
    </div>
{% endblock %}
